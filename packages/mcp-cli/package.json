{
  "name": "@repo/mcp-cli",
  "version": "1.0.0",
  "description": "Comprehensive CLI tool for managing MCP hybrid server and all its components",
  "main": "dist/index.js",
  "bin": {
    "mcp-cli": "./dist/bin/mcp-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/bin/mcp-cli.ts",
    "start": "node dist/bin/mcp-cli.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build:env": "cd ../.. && pnpm build:env"
  },
  "keywords": [
    "mcp",
    "cli",
    "server",
    "agents",
    "workflows",
    "tools",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "kleur": "^4.1.5",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "boxen": "^5.1.2",
    "table": "^6.8.1",
    "axios": "^1.7.9",
    "ws": "^8.18.0",
    "yaml": "^2.6.0",
    "glob": "^10.4.1",
    "fs-extra": "^11.2.0",
    "moment": "^2.30.1",
    "tail": "^2.2.6",
    "node-cron": "^3.0.3",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/inquirer": "^8.2.10",
    "@types/fs-extra": "^11.0.4",
    "@types/ws": "^8.5.12",
    "@types/blessed": "^0.1.25",
    "@types/tail": "^2.2.3",
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "typescript": "^5.7.3",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}