{
  "extends": "@repo/typescript-config/nest",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@aws/*": ["src/aws/*"],
      "@memory/*": ["src/memory/*"],
      "@workflows/*": ["src/workflows/*"],
      "@agents/*": ["src/agents/*"],
      "@tools/*": ["src/tools/*"],
      "@integrations/*": ["src/integrations/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "test", "**/*.spec.ts", "**/*.e2e-spec.ts"]
}
