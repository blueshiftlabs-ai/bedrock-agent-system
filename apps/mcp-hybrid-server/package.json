{
  "name": "@apps/mcp-hybrid-server",
  "version": "1.0.0",
  "description": "Hybrid NestJS + LangGraph MCP Server with AWS integration",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "dev": "nest start --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "build:env": "cd ../.. && pnpm build:env",
    "docker:build": "docker build -t mcp-hybrid-server -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 mcp-hybrid-server",
    "deploy:dev": "./deployment/deploy.sh dev",
    "deploy:prod": "./deployment/deploy.sh prod",
    "clean": "rm -rf dist coverage .turbo",
    "mcp": "node dist/integrations/mcp-client/cli/mcp-cli.js",
    "mcp:dev": "ts-node src/integrations/mcp-client/cli/mcp-cli.ts",
    "setup-local-dev": "./scripts/setup-local-dev.sh",
    "start:server": "./scripts/start-mcp-server.sh server development",
    "start:client": "./scripts/start-mcp-server.sh client development",
    "start:hybrid": "./scripts/start-mcp-server.sh hybrid development",
    "mcp:config": "./scripts/mcp-config.sh",
    "mcp:init": "./scripts/mcp-config.sh init",
    "mcp:list": "./scripts/mcp-config.sh list",
    "mcp:status": "./scripts/mcp-config.sh status",
    "mcp:validate": "./scripts/mcp-config.sh validate",
    "docker:server": "docker-compose -f docker-compose.mcp.yml up mcp-server",
    "docker:client": "docker-compose -f docker-compose.mcp.yml --profile client up mcp-client",
    "docker:hybrid": "docker-compose -f docker-compose.mcp.yml --profile hybrid up mcp-hybrid",
    "docker:monitoring": "docker-compose -f docker-compose.mcp.yml --profile monitoring up"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.821.0",
    "@aws-sdk/client-bedrock-runtime": "^3.817.0",
    "@aws-sdk/client-dynamodb": "^3.821.0",
    "@aws-sdk/client-neptune": "^3.821.0",
    "@aws-sdk/client-opensearch": "^3.821.0",
    "@aws-sdk/client-s3": "^3.821.0",
    "@aws-sdk/lib-dynamodb": "^3.821.0",
    "@langchain/aws": "^0.1.10",
    "@langchain/core": "^0.3.28",
    "@langchain/langgraph": "^0.2.74",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.7",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^11.0.7",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/platform-express": "^11.0.7",
    "@nestjs/platform-socket.io": "^11.0.7",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/websockets": "^11.0.7",
    "@rekog/mcp-nest": "^1.0.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "commander": "^12.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.3.7",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "semver": "^7.6.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^11.0.7",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.4",
    "@types/semver": "^7.5.8",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
