# Environment configuration example for mcp-hybrid-server
# Copy this file to .env and fill in the values

NODE_ENV=development

# Parameters
AWS_REGION=your_value_here (required) # default: us-east-1
AWS_ACCOUNT_ID=your_value_here # default: 123456789012
PORT=your_value_here # default: 3000
HOST=your_value_here # default: 0.0.0.0
API_PREFIX=your_value_here # default: api
CORS_ORIGINS=your_value_here # default: *
DYNAMODB_TABLE_PREFIX=your_value_here (required) # default: bedrock-agent-local
DYNAMODB_REGION=your_value_here # default: us-east-1
S3_BUCKET_NAME=your_value_here (required) # default: bedrock-agent-local-bucket
S3_REGION=your_value_here # default: us-east-1
OPENSEARCH_ENDPOINT=your_value_here # default: https://localhost:9200
OPENSEARCH_REGION=your_value_here # default: us-east-1
NEPTUNE_ENDPOINT=your_value_here # default: localhost
NEPTUNE_PORT=your_value_here # default: 8182
NEPTUNE_REGION=your_value_here # default: us-east-1
BEDROCK_REGION=your_value_here (required) # default: us-east-1
BEDROCK_MODEL_ID=your_value_here (required) # default: anthropic.claude-v2
BEDROCK_MAX_TOKENS=your_value_here # default: 4096
BEDROCK_TEMPERATURE=your_value_here # default: 0.7
LOG_LEVEL=your_value_here # default: info
LOG_FORMAT=your_value_here # default: json
ENABLE_MEMORY_MODULE=your_value_here # default: true
ENABLE_INDEXING_MODULE=your_value_here # default: true
ENABLE_KNOWLEDGE_GRAPH=your_value_here # default: true
MAX_CONCURRENT_WORKFLOWS=your_value_here # default: 10
WORKFLOW_TIMEOUT_MS=your_value_here # default: 300000
AGENT_TIMEOUT_MS=your_value_here # default: 60000

# Secrets
API_KEY=your_secret_here (required)
JWT_SECRET=your_secret_here (required)
ENCRYPTION_KEY=your_secret_here
OPENSEARCH_USERNAME=your_secret_here
OPENSEARCH_PASSWORD=your_secret_here
