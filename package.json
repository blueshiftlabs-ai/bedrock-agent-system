{
  "name": "bedrock-agent-system",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "prebuild": "pnpm build:env",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean",
    "build:env": "ts-node scripts/build-env.ts",
    "build:env:local": "ts-node scripts/build-env.ts local",
    "build:env:dev": "ts-node scripts/build-env.ts dev",
    "build:env:staging": "ts-node scripts/build-env.ts staging",
    "build:env:prod": "ts-node scripts/build-env.ts prod",
    "validate:env": "ts-node scripts/validate-env.ts",
    "setup:aws:params": "./scripts/setup-aws-params.sh",
    "infrastructure:synth": "pnpm --filter @infra/mcp-hybrid-stack synth",
    "infrastructure:deploy": "pnpm --filter @infra/mcp-hybrid-stack deploy",
    "infrastructure:destroy": "pnpm --filter @infra/mcp-hybrid-stack destroy",
    "app:dev": "pnpm --filter @apps/mcp-hybrid-server dev",
    "app:build": "pnpm --filter @apps/mcp-hybrid-server build",
    "app:test": "pnpm --filter @apps/mcp-hybrid-server test",
    "dashboard:dev": "pnpm --filter @apps/mcp-dashboard dev",
    "dashboard:build": "pnpm --filter @apps/mcp-dashboard build",
    "dashboard:test": "pnpm --filter @apps/mcp-dashboard test",
    "cli:build": "pnpm --filter @repo/mcp-cli build",
    "cli:dev": "pnpm --filter @repo/mcp-cli dev",
    "cli": "pnpm --filter @repo/mcp-cli start",
    "mcp": "pnpm cli",
    "mcp-cli": "pnpm cli",
    "server:start": "pnpm mcp server start",
    "server:stop": "pnpm mcp server stop",
    "server:status": "pnpm mcp server status",
    "server:logs": "pnpm mcp server logs",
    "status": "pnpm mcp status",
    "health": "pnpm mcp health",
    "monitor": "pnpm mcp monitor dashboard",
    "agents": "pnpm mcp agent list",
    "workflows": "pnpm mcp workflow list",
    "tools": "pnpm mcp tool list"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@aws-sdk/client-ssm": "^3.720.0",
    "@aws-sdk/client-secrets-manager": "^3.720.0",
    "@types/node": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "turbo": "^2.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}