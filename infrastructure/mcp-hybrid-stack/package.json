{
  "name": "@infra/mcp-hybrid-stack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "synth": "cdk synth",
    "synth:microservices": "cdk synth --app 'npx ts-node --prefer-ts-exts bin/microservices-app.ts'",
    "deploy": "cdk deploy --all",
    "deploy:microservices": "cdk deploy --app 'npx ts-node --prefer-ts-exts bin/microservices-app.ts' --all",
    "destroy": "cdk destroy --all",
    "destroy:microservices": "cdk destroy --app 'npx ts-node --prefer-ts-exts bin/microservices-app.ts' --all",
    "diff": "cdk diff",
    "diff:microservices": "cdk diff --app 'npx ts-node --prefer-ts-exts bin/microservices-app.ts'",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "test": "jest",
    "build-env": "ts-node scripts/build-env-from-parameters.ts"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.200.1",
    "aws-sdk": "^2.1692.0",
    "commander": "^11.1.0",
    "constructs": "^10.4.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@packages/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@types/node": "^22.15.30",
    "aws-cdk": "^2.1018.0",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  }
}